<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Group Posts</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Study Group Posts</h1>
    
    <form id="postForm" action="/posts" method="POST">
        <textarea name="content" placeholder="Write a new post..." required></textarea>
        <button type="submit">Post</button>
    </form>

    <div id="postsContainer">
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <div class="post">
                    <p><%= post.content %></p>
                    <a href="/posts/<%= post.id %>/replies">View Replies</a>
                </div>
            <% }) %>
        <% } else { %>
            <p>No posts available.</p>
        <% } %>
    </div>

    <script src="/js/scripts.js"></script>
</body>
</html>